<!-- app/views/sessions/new.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>Login Page</title>
  <%= csrf_meta_tags %> <!-- Rails CSRF protection -->
  <%= stylesheet_link_tag 'application', media: 'all' %> <!-- Include application-wide styles -->
</head>
<body>
  <div class="container">
    <h2>Login</h2>
    <%= form_with(url: login_path, method: "post") do |f| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control', required: true, placeholder: "Enter your username" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', required: true, placeholder: "Enter your password" %>
      </div>
      <div class="actions">
        <%= f.submit 'Login', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</body>
</html>
