
<!DOCTYPE html>
<html>
<head>
  <title>Sign Up</title>
  <%= csrf_meta_tags %> <!-- Rails CSRF protection -->
  <%= stylesheet_link_tag 'application', media: 'all' %> <!-- Include application-wide styles -->
</head>
<body>
  <div class="container">
    <h2>Sign Up</h2>
    <%= form_with(model: User.new, url: signup_path, method: "post") do |f| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
      </div>
      <div class="actions">
        <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</body>
</html>
