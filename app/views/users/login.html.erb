<!-- app/views/sessions/new.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>Login Page</title>
  <%= csrf_meta_tags %> <!-- Rails CSRF protection -->
  <%= stylesheet_link_tag 'sessions', media: 'all' %> <!-- Include application-wide styles -->
  <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css' %>

</head>

<body>



  <div class="container">
    <h2 class="hh2">Login</h2>
    <%= form_with(url: login_path, method: "post") do |f| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>

      <% end %>



        <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-user"></i></span>
      <%= f.text_field :username, class: 'formUser', required: true, placeholder: "Username" %>
    </div>
  </div>

        <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :password, class: 'formPass', required: true, placeholder: "Password" %>
    </div>
  </div>

      <div class="actions">
        <%= f.submit 'Login', class: 'logbutt' %>
      </div>


    <% end %>



          <div class="upSign">
            <a class="new" href="/signup">Don't Have an Account? Sign Up!</a>
          </div>
  </div>

</body>
</html>
